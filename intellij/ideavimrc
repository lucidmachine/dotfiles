""""""""""
" Mappings
""""""""""
let mapleader = " "
let maplocalleader = "\\"

" Buffers
noremap <silent> <leader>bb <Action>(RecentFiles)

" Comments
noremap <silent> <leader>; <Action>(CommentByLineComment)
xnoremap <silent> <leader>; <Action>(CommentByLineComment)

" Copy
" noremap <silent> <leader>cc :call mappings#copy_buffer_to_clipboard()<CR>
" xnoremap <silent> <leader>cc :call mappings#copy_selection_to_clipboard()<CR>
noremap <silent> <leader>cp <Action>(CopyContentRootPath)
noremap <silent> <leader>cP <Action>(CopyAbsolutePath)
noremap <silent> <leader>cr <Action>(CopyReference)

" Diagnostics
nmap <leader>dl <Action>(ActivateProblemsViewToolWindow)
nmap <leader>dn <Action>(GotoNextError)
nmap <leader>dp <Action>(GotoPreviousError)

" Documentation
nnoremap <silent> K <Action>(QuickJavaDoc)

" Files
noremap <silent> <leader>fe <Action>(ActivateProjectToolWindow)
noremap <silent> <leader>ff <Action>(GotoFile)

" Goto
nmap <silent> gd <Action>(GotoDeclaration)
nmap <silent> gy <Action>(GotoTypeDeclaration)
nmap <silent> gi <Action>(GotoImplementation)
nmap <silent> gr <Action>(ShowUsages)

" Refactorings
nmap <leader>ra <Action>(ShowIntentionActions)
nmap <leader>ri <Action>(Inline)
nmap <leader>rl <Action>(ReformatCode)
nmap <leader>ro <Action>(OptimizeImports)
nmap <leader>rr <Action>(RenameElement)

" IDEAVim Configuration
" noremap <silent> <leader>vv :tabnew $MYVIMRC<CR>
noremap <silent> <leader>vr :source ~/.ideavimrc<CR>

" Windows
noremap <leader>wo :only<CR>
noremap <leader>wq <Action>(CloseContent)
noremap <leader>wh <C-W>h
noremap <leader>wj <C-W>j
noremap <leader>wk <C-W>k
noremap <leader>wl <C-W>l
