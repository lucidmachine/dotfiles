# n - Node version manager
export N_PREFIX="${HOME}/.n"

# PATH
export PATH="${HOME}/bin:${N_PREFIX}/bin:$PATH"

# Set default editor
if [ $(which nvim) ];   then export VISUAL='nvim'
elif [ $(which vim) ];  then export VISUAL='vim'
elif [ $(which vi) ];   then export VISUAL='vi'
fi

# Set default pager
if [ $(which less) ];   then export PAGER='less'
elif [ $(which more) ]; then export PAGER='more'
fi

# Set default visual diff command
if [ $(which meld) ];     then export VISUAL_DIFF='meld'
elif [ $(which kdiff3) ]; then export VISUAL_DIFF='kdiff3'
fi
